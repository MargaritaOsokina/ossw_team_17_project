<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aeff82"
    tools:context=".GameActivity">

    <com.cauossw.snake.GameView
        android:id="@+id/GameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/inGame_pause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/ingame_pause_desc"
        android:src="@drawable/ic_baseline_pause_24"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/gameView_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/black"
        android:alpha="0"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inGame_pause_popup"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:visibility="gone"
        android:elevation="1dp" >

        <TextView
            android:id="@+id/popup_resume"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/popup_save"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingVertical="5dp"
            android:text="@string/resume"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@drawable/button_background_with_borders" />

        <TextView
            android:id="@+id/popup_save"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/popup_resume"
            app:layout_constraintBottom_toTopOf="@id/popup_restart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingVertical="5dp"
            android:text="@string/save"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@drawable/button_background_with_borders" />

        <TextView
            android:id="@+id/popup_restart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/popup_save"
            app:layout_constraintBottom_toTopOf="@id/popup_exit"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingVertical="5dp"
            android:text="@string/restart"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@drawable/button_background_with_borders" />

        <TextView
            android:id="@+id/popup_exit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/popup_restart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingVertical="5dp"
            android:text="@string/exit"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@drawable/button_background_with_borders" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GameView"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/upButton"
                android:layout_width="50sp"
                android:layout_height="50sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/leftButton"
                android:layout_width="50sp"
                android:layout_height="50sp" />

            <Button
                android:id="@+id/blank"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:visibility="invisible"
                tools:visibility="invisible" />

            <Button
                android:id="@+id/rightButton"
                android:layout_width="50sp"
                android:layout_height="50sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/downButton"
                android:layout_width="50sp"
                android:layout_height="50sp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>